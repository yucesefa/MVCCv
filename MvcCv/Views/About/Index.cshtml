@using MvcCv.Models.Entity
@model List<tblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Mail</th>
        <th>Description</th>
        <th>Image</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Mail</td>
            <td>@item.Description</td>
            <td><img src="@item.Image" style="width:100px; height:100px;" /></td>
            <td><a href="/About/DeleteAbout/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/About/EditAbout/@item.ID" class="btn btn-success">Update</a></td>
            <td></td>
        </tr>
    }
</table>
<a href="/About/AddAbout/" class="btn btn-info"> Add New About</a>

