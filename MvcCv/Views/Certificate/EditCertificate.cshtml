@model MvcCv.Models.Entity.tblCertificate
@{
    ViewBag.Title = "EditCertificate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Certificate:")
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Date:")
    @Html.TextAreaFor(x => x.Date, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Edit</button>
    <a href="/Certificate/DeleteCertificate/@ViewBag.d" class="btn btn-danger">Delete</a>
</form>

