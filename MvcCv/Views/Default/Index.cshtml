@using MvcCv.Models.Entity
@model List<tblAbout>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@Html.Partial("Head")
<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info fixed-top" id="sideNav">
        <a href="~/startbootstrap-resume-gh-pages/assets/img/cveng.pdf" download="cv.pdf" class="btn-rounded btn btn-outline-dark mt-4">Cv'mi İndirin</a>
        @foreach (var item in Model)
        {
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <span class="d-block d-lg-none">@item.Name @item.Surname</span>
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="@item.Image" alt="" /></span>
            </a>
        }
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">About ME</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">Experience</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">Education</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">Skills</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">Project</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">Certificate</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#contact">Contact</a></li>
            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    <div class="container-fluid p-0">
        <!-- About-->
        <section class="resume-section" id="about">
            @foreach (var item in Model)
            {
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        @item.Name
                        <span class="text-info">@item.Surname</span>
                    </h1>
                    <div class="subheading mb-5">
                        <i class="fa fa-globe" aria-hidden="true"></i>
                        @item.Address <i class="fa fa-phone" aria-hidden="true"></i> @item.Phone
                        <i class="fa fa-envelope"></i>
                        <a href="mailto:name@email.com" class="text-info">@item.Mail</a>
                    </div>
                    <p class="lead mb-5">@item.Description</p>
                    @Html.Action("SocialMedia", "Default")
                </div>
            }
        </section>
        <hr class="m-0" />
        <!-- Experience-->
        <section class="resume-section" id="experience">
            @Html.Action("Experience", "Default")
            <hr class="m-0" />
        </section>
        <!-- Education-->
        <section class="resume-section" id="education">
            @Html.Action("Education", "Default")
        </section>
        <hr class="m-0" />
        <!-- Skills-->
        <section class="resume-section" id="skills">
            @Html.Action("Skills", "Default")
        </section>
        <hr class="m-0" />
        <!-- Interests-->
        <section class="resume-section" id="interests">
            @Html.Action("Project", "Default")
        </section>
        <hr class="m-0" />
        <!-- Awards-->
        <section class="resume-section" id="awards">
            @Html.Action("Certificate", "Default")
        </section>
        <!--Contact -->
        <section class="resume-section" id="contact">
            @Html.Action("Contact", "Default")
        </section>
    </div>
    @Html.Partial("Script")
</body>
</html>
